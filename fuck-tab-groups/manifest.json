{
  "manifest_version": 3,
  "name": "Tab Group Blocker",
  "version": "1.0",
  "description": "Prevents the creation of tab groups in Microsoft Edge",
  "permissions": [
    "tabGroups",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}